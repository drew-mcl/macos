# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{sh,bash,zsh}]
indent_size = 2
shell_variant = bash

[*.{yaml,yml}]
indent_size = 2

[*.{json,toml}]
indent_size = 2

[*.lua]
indent_size = 2

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.{rb,rake}]
indent_size = 2
